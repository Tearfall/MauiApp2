<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <HorizontalStackLayout
        Spacing="10">

        <VerticalStackLayout>
            <ImageButton
                x:Name="imagebutton1"
                Source="expectation1.jpg"
                Clicked="onImageButton1Clicked"
                HeightRequest="150"
                WidthRequest="150"/>

            <Label
                x:Name="label1"
                Text="Expectation"
                HorizontalOptions="Center"/>

        </VerticalStackLayout>
            
        <VerticalStackLayout>
            <ImageButton
                x:Name="imagebutton2"
                Source="expectation2.jpg"
                Clicked="onImageButton2Clicked"
                HeightRequest="150"
                WidthRequest="150"/>
            
            <Label
                x:Name="label2"
                Text="Expectation"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>


    </HorizontalStackLayout>

</ContentPage>
